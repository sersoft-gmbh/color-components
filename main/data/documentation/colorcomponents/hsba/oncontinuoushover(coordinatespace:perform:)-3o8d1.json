        {
          "inlineContent" : [
            {
              "text" : "Use this modifier to define a region for detecting pointer movement with",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "a view. The following example updates a small rectangle’s position",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "and style by modifying ",
              "type" : "text"
            },
            {
              "code" : "hoverLocation",
              "type" : "codeVoice"
            },
            {
              "text" : " and ",
              "type" : "text"
            },
            {
              "code" : "isHovering",
              "type" : "codeVoice"
            },
            {
              "text" : " as the pointer",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "moves within the larger, red rectangle:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "@State private var hoverLocation: CGPoint = .zero",
            "@State private var isHovering = false",
            "",
            "var body: some View {",
            "    Color.red",
            "        .frame(width: 400, height: 400)",
            "        .onContinuousHover { phase in",
            "            switch phase {",
            "            case .active(let location):",
            "                hoverLocation = location",
            "                isHovering = true",
            "            case .ended:",
            "                isHovering = false",
            "            }",
            "        }",
            "        .overlay {",
            "            Rectangle()",
            "                .frame(width: 50, height: 50)",
            "                .foregroundStyle(isHovering ? .green : .blue)",
            "                .offset(x: hoverLocation.x, y: hoverLocation.y)",
            "        }",
            "}"
          ],
